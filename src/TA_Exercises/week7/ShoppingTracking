class ShoppingTracking {
    
    private int size = 0;
    private int capacity = 10;
    Shopping[] array = new Shopping[10];

    public void growSize(){
        Shopping[] temp = new Shopping[capacity*2];
        for (int i=0; i<capacity; i++)
            temp[i]=array[i];
        array = temp;
    }
    public void addElement(Shopping n){
        boolean flag = true;
        for (int i=0; i<size && flag; i++)
            if (n.getDateOfShopping() == array[i].getDateOfShopping())
                flag = false;
        if (flag) { //ADD SCANNER AND SCAN FROM INPUT IF THIS IS A DOUBLE BUYING IN THE SAME DAY
        if (size == capacity)
            growSize();
        array[size]=n;
        size++;
    }
    public void addElementAt(Shopping n, int index){
        if (size==capacity)
            growSize();
        for (int i=size; i>index; i--)
            array[i+1]=array[i];
        array[index]=n;
        size++;
    }
// The next two functions aren't relevant here!
    //public void removeElement(){
    //    array[size]=0;
    //    size--;
    //}
    //public void removeElementAt(int index){
    //    for (int i=index; i<size-1; i++)
    //        array[i]=array[i+1];
    //    array[size-1]=0;
    //    size--;
    //}
    public void shrink(){
        int[] temp = new int[size];
        for (int i=0; i<size; i++)
              temp[i]=array[i];
        capacity = size;
        array = temp;
    }
    

}
